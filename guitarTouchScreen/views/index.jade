extends layout

block content
    .grid
      .row
        <div class= "span10 offset1">
        h1 The Acoustronic Guitar
        h3 To play song, browse by tapping arrows below tap album art to play.
       </div>
      .row
        <div class="tile-group seven" style="padding-top: 0px">
        <div class="tile triple triple-vertical ol-transparent">
        <div class="tile-content carousel">
        <div class="carousel" data-role="carousel" data-auto=false data-height="100%" data-markers-show=false>
        each song in songs
          <div class="slide image">
          img(src="images/"+song.img, id=song.sindex)
          <div class="brand">
          <span class="label fg-white bg-dark">
          h2 #{song.sname} by: #{song.sartist}
          <i class="icon-play"></i>
          </span>
          </div>
          </div>
        
        <a class="controls left"><i class="icon-arrow-left-3"></i></a>
        <a class="controls right"><i class="icon-arrow-right-3"></i></a>
        </div>
        </div>
        </div>
        <div class="tile bg-darkCobalt ol-transparent">
        <div class="tile-content icon">
        <i class="icon-volume-5"></i>
        </div>
        <div class="brand">
        <span class="label fg-white"> Now Playing</span>
        </div>
        </div>                
        <div class="tile double ol-transparent bg-cyan">
        <div class="tile-content image">
        <img src="docs/images/4.jpg"></img>
        </div>
        <div class="brand bg-black">
        <span class="label fg-white "> Meet the team 
        </span>
        </div>
        </div>
        <div class="tile ol-transparent"></div>             
        <a href="/viewAll"><div class="tile bg-darkCyan double double-vertical ol-transparent">
        <div class="tile-content icon">
        <i class="icon-playlist on-left"></i>
        <h2 class="text-center" style="color:white"> Click here to see a list of all songs </h2></span>
        </div>
        </div></a>
        <div class="tile ol-transparent"></div>
        <div class="tile ol-transparent"></div>
        <div class="tile double bg-cyan ol-transparent">
        <h2 class="text-center"> <font color= "white"> About: we're cool<font color= "white"></h2>
        </div>
        </div>
        </div> 
        </font>
        </div>





